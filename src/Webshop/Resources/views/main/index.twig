{% extends "layout.twig" %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            <img src="/images/banners/opruiming_1.jpg">
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row">
                {% for product in products %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="/images/products/product_{{ product.id }}.jpg" alt="">
                        <div class="caption">
                            <h3>{{ product.name }}</h3>
                            <p><a href="{{ path('cart-add', {id: product.id}) }}" class="btn btn-primary" role="button"><span class="glyphicon glyphicon-shopping-cart"></span> </a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}